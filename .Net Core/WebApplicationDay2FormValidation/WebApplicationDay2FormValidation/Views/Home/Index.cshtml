@*@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers*@
@model WebApplicationDay2FormValidation.Models.Employee




<form asp-action="Index" asp-controller="Home" method="post">
    <label asp-for="EmpId"></label>
    <br />
    <input asp-for="EmpId" placeholder="Enter Employee Id" class="form-control" />
    <br />
    <span asp-validation-for="EmpId"></span>
    <br />
    <label asp-for="EmpName"></label>
    <br />
    <input asp-for="EmpName" placeholder="Enter Employee Name" class="form-control" />
    <br />
    <span asp-validation-for="EmpName"></span>
    <br />
    <label asp-for="Salary"></label>
    <br />
    <input asp-for="Salary" placeholder="Enter Your Salary" class="form-control" />
    <br />
    <span asp-validation-for="Salary"></span>
    <br />
    <label asp-for="Email"></label>
    <br />
    <input asp-for="Email" placeholder="Enter  Email Address" class="form-control" />
    <br />
    <span asp-validation-for="Email"></span>
    <br />
    <label asp-for="Birthdate"></label>
    <br />
    <input asp-for="Birthdate" placeholder="Enter BirthDate" class="form-control" />
    <br />
    <span asp-validation-for="Birthdate"></span>  
    <br />
    <label asp-for="Password"></label>
    <br />
    <input asp-for="Password" placeholder="Enter Password" class="form-control" />
    <br />
    <span asp-validation-for="Password"></span>
    <br />
    <label asp-for="ConfirmPassword"></label>
    <br />
    <input asp-for="ConfirmPassword" placeholder="Enter Confirm password" class="form-control" />
    <br />
    <span asp-validation-for="ConfirmPassword"></span>
    <br />
    
    <input type="submit" value="Submit" class="btn-primary" />
</form>